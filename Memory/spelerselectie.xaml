<Window x:Class="speler_selectie_scherm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:speler_selectie_scherm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="290*"/>
        </Grid.ColumnDefinitions>
        <Button  x:Name ="buttonNumber" Content="1" FontSize="40px" Click="numberButton_Click" Margin="411.4,58,84.6,276" Grid.Column="1" >
        </Button>

        <Button Margin="269.4,179,31.6,153" Click="startGame_click" FontSize="40px" Grid.Column="1">
            start game
        </Button>
        <TextBox x:Name="name1" Text="{Binding Name1}" Margin="134,36,379.6,324" Visibility="Visible" Grid.ColumnSpan="2"/>
        <TextBox x:Name="name2" Text="{Binding Name2}" Margin="134,121,379.6,239" Visibility ="hidden" Grid.ColumnSpan="2"/>


        <TextBlock Margin="269.4,74,173.6,276" FontSize="40" Grid.Column="1">
                 players
        </TextBlock>
    </Grid>

</Window>
